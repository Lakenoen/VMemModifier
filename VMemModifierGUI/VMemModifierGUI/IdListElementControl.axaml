<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VMemReaderGUI.IdListElementControl">
		<Button Click="OnClick" x:Name="InternalButton" Background="Transparent" BorderThickness="0" Width="{Binding Bounds.Width, RelativeSource={RelativeSource AncestorType=UserControl}}">
			<Grid x:Name="ButtonGrid" ColumnDefinitions="*,*" RowDefinitions="*">
				<TextBlock  Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left"/>
				<TextBlock  Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center"/>
			</Grid>
		</Button>
</UserControl>
