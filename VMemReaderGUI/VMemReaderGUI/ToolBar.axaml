<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="100"
             x:Class="VMemReaderGUI.ToolBar">
	<Border Background="Gainsboro"
          BorderBrush="Black"
          BorderThickness="1"
          CornerRadius="2"
          Padding="5" Margin="5">
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Left"  Height="50">
			<Button VerticalContentAlignment="Center" Height="46">Search</Button>
			<Button VerticalContentAlignment="Center" Height="46">Read</Button>
			<Button VerticalContentAlignment="Center" Height="46">Write</Button>
			<Button VerticalContentAlignment="Center" Height="46">Inject</Button>
			<Button VerticalContentAlignment="Center" Height="46">Create</Button>
			<Button VerticalContentAlignment="Center" Height="46">Close</Button>
			<Label VerticalContentAlignment="Center">ID</Label>
			<TextBox VerticalContentAlignment="Center" Height="30"></TextBox>
		</StackPanel>
	</Border>
</UserControl>
